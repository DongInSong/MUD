const express = require('express');
const cors = require('cors');

const app = express();
const PORT = 3000;

app.use(cors());
// app.use(express.json()); // ← 반드시 위에 있어야 함
app.use(express.json({ limit: '50mb' })); // ← 반드시 위에 있어야 함
app.use(express.urlencoded({ extended: true })); // ← fallback 용도

app.post('/api/generate', async (req, res) => {
    console.log('===== 새로운 요청 =====');
    console.log('Content-Type:', req.headers['content-type']);
    console.log('클라이언트에서 받은 데이터:', JSON.stringify(req.body, null, 2));

    try {
        const response = await fetch('http://192.168.255.231:11434/api/generate', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(req.body)
        });

        const data = await response.text();
        console.log('Ollama 응답:', data);

        res.send(data);

    } catch (err) {
        console.error('프록시 요청 실패:', err);
        res.status(500).json({ error: err.message });
    }
});

app.listen(PORT, () => {
    console.log(`Proxy server running on http://localhost:${PORT}`);
});
